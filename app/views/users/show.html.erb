<div class="row">
	<div class="col-xs-3">
		<%= render 'books/new', book:@book, user:@user %>
	</div>

	<div class="col-xs-9">
		<h1>Books</h1>

		<table class="table">
			<thead>
				<tr>
					<th></th>
					<th>Title</th>
					<th>Opinion</th>
				</tr>
			</thead>
			<tbody>
				<% @user.books.each do |book| %>
				<tr>
					<td>
						<%= attachment_image_tag book.user, :profile_image, :fill, 30, 30, fallback: "no_image.jpg", size:'30x30' %>
					</td>
					<td>
						<%= link_to book_path(book) do %>
						<%= book.title %>
						<% end %>
					</td>
					<td><%= book.body %></td>
				</tr>
				<% end %>
			</tbody>
		</table>

	</div>
</div>

