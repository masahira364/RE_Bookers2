<div class="row">
	<div class="col-xs-3">
		<%= render 'books/new', book:@book, user:current_user %>
	</div>

	<div class="col-xs-9">
		<h1>Users</h1>


		<table class="table">
			<thead>
				<tr>
					<th>Image</<th>
					<th>name</th>
					<th></th>
				</tr>
			</thead>
			<tbody>

				<% @users.each do |user| %>
				<tr>
					<td><%= attachment_image_tag user, :profile_image, :fill, 30 ,30, fallback: "no_image.jpg", size:'30x30' %></td>
					<td><%= user.name %></td>
					<td><%= link_to 'Show', user_path(user) %></td>
				</tr>
				<% end %>

			</tbody>
		</table>

	</div>
</div>
