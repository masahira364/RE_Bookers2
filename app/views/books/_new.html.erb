<% if @book.errors.any? %>
  <div id="error_explanation">
    <h3><%= @book.errors.count %>errors prohibited this obj from being saved:</h3>
    <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>



<h1>User info</h1>
<%= attachment_image_tag user, :profile_image, :fill, 80, 80, fallback: "no_image.jpg",size:'80x80' %>
<table class="table">
	<tbody>
		<tr>
			<td>name</td>
			<td><%= user.name %></td>
		</tr>
		<tr>
			<td>introduction</td>
			<td><%= user.introduction %></td>
		</tr>
	</tbody>
</table>

<div class="action row">
	<% if user == current_user %>
		<%= link_to edit_user_path(user) do %>
			<span class="glyphicon glyphicon-wrench btn btn-default col-md-12" aria-hidden="true"></span>
		<% end %>
	<% else %>
		<%= link_to user_path(current_user) do %>
			<span class="glyphicon glyphicon-wrench btn btn-default col-md-12" aria-hidden="true"></span>
		<% end %>
	<% end %>
</div>

<h1>New book</h1>

<%= form_for(book) do |f| %>
	<div class="field row">
		<label for="book_title">Title</label>
		<%= f.text_field :title, class:"col-md-12" %>
	</div>
	<div class="field row">
		<label for="book_body">Opinion</label>
		<%= f.text_area :body, class:"col-md-12" %>
	</div>

	<div class="action row">
	<%= f.submit 'Create Book', class:"btn btn-primary col-md-12" %>
	</div>

	<% end %>

